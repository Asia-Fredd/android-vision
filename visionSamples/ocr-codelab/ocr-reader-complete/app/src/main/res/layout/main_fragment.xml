<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/horizontal_margin"
    android:paddingEnd="@dimen/horizontal_margin"
    android:paddingTop="@dimen/vertical_margin"
    android:paddingBottom="@dimen/vertical_margin"
    tools:ignore="HardcodedText"
    tools:context="asia.fredd.tools.creditcardutils.ui.main.MainFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/card_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="信用卡卡號"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/card_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="信用卡效期"
        android:layout_marginTop="@dimen/vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/card_number_layout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/card_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button"
        android:id="@+id/card_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="掃描信用卡"
        android:layout_marginTop="@dimen/vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/card_date_layout"
        app:backgroundTint="@color/colorPrimaryDark"/>

    <android.support.design.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button"
        android:theme="@style/Theme.MaterialComponents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="結帳"
        android:layout_marginTop="@dimen/vertical_margin"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
